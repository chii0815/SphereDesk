{% extends 'base.html.twig' %}
{% block title %}
    {{ title|trans }}
{% endblock %}

{% block body %}

    <div class="div-center bg-light">
        <img src="{{ asset('images/static/AlexA_ohne_SD_transparent.png') }}" id="login-logo">
        <hr>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <div class="row">
                    <div class="col-1 alert-icon-col">
                        <span class="fas fa-exclamation-triangle fa-fw"></span>
                    </div>
                    <div class="col">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            </div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            <div class="form-group">
                <label for="username">{{ 'Username'|trans }}:</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label for="password">{{ 'Password'|trans }}:</label>
                <input type="password" id="password" name="_password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me" />
                <label for="remember_me">{{ 'Remember Me'|trans }}</label>
            </div>

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit" class="btn btn-primary">{{ 'Login'|trans }}</button>
        </form>
    </div>
{% endblock %}
 
{% block stylesheets %}
{% endblock %}